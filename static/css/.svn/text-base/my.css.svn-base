.container{
    max-width:500px;
    margin:0 auto;
    padding:20px 5%;
}

.container img{
    max-width: 100%;
    height:auto;
    margin:0 auto;
    display:block;
    vertical-align: middle;
}

.container p{
}

input[type=number]::-webkit-inner-spin-button, 
input[type=number]::-webkit-outer-spin-button { 
  -webkit-appearance: none; 
  margin: 0; 
}

.rgtxt{
    text-align: right;
}

.row-grid{
    font-size:0;
}

a:visited{
    color:inherit;
}

.row-grid li{
    box-sizing:border-box;
    -moz-box-sizing:border-box; /* Firefox */
    -webkit-box-sizing:border-box; /* Safari */
    padding:30px 0;
    width:33.33%;
    font-size:14px;
    display: inline-block;
    border-bottom: 1px solid #EEE;
    text-align: center;
    border-right: 1px solid #EEE;
}

.row-grid li:nth-child(3n){
    border-right:0;
}

.receivehblist li{
    font-size: 0;
    border-bottom: 1px solid #EEE;
    padding:5px 0;
}

.receivehblist li div{
    font-size: 14px;
    display: inline-block;
    width: 49.5%;
}
.receivehblist span{
    background: #F1C40F;
    font-size: 10px;
    padding:1px 2px;
    color: white;
}

.sendhblist li{
    font-size: 0;
    border-bottom: 1px solid #EEE;
    padding:5px 0;
}

.sendhblist li div{
    font-size: 14px;
    display: inline-block;
    width: 49.5%;
}

.hb-img{
    width: 40px;
    height: 40px;
    margin-bottom: 10px;
}

img.qr-code{
    max-width:100%;
    height:auto;
    border:0;
    display:block;
    vertical-align:middle;
    margin:0 auto;
}

.account-title{
    text-align:center;
}

.account-desc{
    padding-top:10px;
    font-size:16px;
    text-indent: 2em;
}

