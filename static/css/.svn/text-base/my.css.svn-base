.hongbao-bg{
    max-width:500px;
    margin:0 auto;
}



#sendhb{
    margin-top:20px;
    width:100%;
    background:#E74C3C;
    border:0;    
    height: 45px;
    color: #FFF;
    font-weight:bolder;
}

.hbgreetings{
    width:100%;
    height:50px;
    border:0;
    border-radius:4px;
}

.hongbao-bg .title-item{
    color:#fff;
}

.hongbao-bg .title-item p{
    height:20px;
    line-height:20px;
    font-weight:bolder;    
}
.hongbao-bg .title{
    padding: 20px 0;
}
.hongbao-bg .title .active{
    color:#E74C3C;
    background:#ffffff;
    border-left:2px solid #C0392B;
    border-top:2px solid #C0392B;
}

.hongbao-bg .left-item{
    border-radius:4px 0 0 4px;
}
.hongbao-bg .right-item{
    border-radius:0 4px 4px 0;
}

.hongbao-bg form{
    background:#E74C3C;
    display:block;
}
.bongbao-title{
    padding:20px 0;
    border-bottom:1px solid #EEE;
    background: #EEE;
}

.bongbao-title img{
    width:100px;
    border-radius:50%;
}

.bongbao-title p{
    margin-top:5px;
    color:#AAA;
    text-align:center;
}

.sraccount{
    max-width:400px;
    margin:0 auto;
    padding:0 5%;
}

.sraccount  .title{
    padding: 20px 0;
}

.sraccount .title .title-item{
    width:49%;
    float:left;
    text-align:center;
    height:20px;
    line-height:20px;
    font-weight:bolder;
    border:1px solid #F1C40F;
    color:#F1C40F;
    cursor:pointer;
}
.sraccount  .title .active{
    color:#fff;
    background:#F1C40F;
}
.sraccount  .left-item{
    border-radius:4px 0 0 4px;
}
.hidden{
    display:none;
}

.sraccount  .right-item{
    border-radius:0 4px 4px 0;
}

.intro h2{
    height:36px;
    line-height:36px;
    border-left:10px solid #F1C40F;
    margin-bottom:20px;
}

.intro p{
    text-indent:2em;
    font-size:13px;
    line-height:22px;
    margin:10px 0;
}

.intro img{
    text-align:center;
    max-width:100%;
    height:auto;
    display:block;
    vertical-align:middle;
    margin:10px auto;
}

.hbsuccess{
    background:#E74C3C;
    margin:0 auto;
    padding:20px 5%;
    max-width:400px;
}

.hbsuccess h1{
    color:#F1C40F;
    font-size:18px;
}

.hbsuccess h1.title{
    text-align:center;
    font-style:italic;
    font-size:20px;
    padding:10px 0;
}

.hbsuccess p{
    color:#111111;
    padding:5px 25px;
    text-indent:2em;
}

.hbsuccess p span{
    color:#F1C40F;
}

.hbsuccess img{
    text-align:center;
    max-width:100%;
    height:auto;
    display:block;
    vertical-align:middle;
    margin:10px auto;
    border-radius:4px;
}

.hbsuccess button{
    width:100%;
    height:40px;
    line-height:40px;
    margin:10px 0;
    background:#F39C12;
    border:0;
    border-right:2px solid #D35400;
    border-bottom:2px solid #D35400;
    border-radius:4px;
}

.myhb h1{
  text-align:center;
}

.sendhb .form-left{
    width:30%;
    float:left;
}

.sendhb .title-item{
    float:left;
    height:20px;
    padding:3px 0;
    border:1px solid #fff;
    width:49%;
    text-align:center;
    cursor:pointer;
}

.sendhb .form-input{
    margin-top:20px;
    font-size: 0;
    height: 45px;
    background: #FFF;
}

.form-input *{
    margin-top: 5px;
    display: inline-block;
    font-size: 16px;
    height: 35px;
    line-height: 35px;
}

p.tip{
    font-size: 14px;
    color:#777;
    text-align: right;
    height: 16px;
    line-height: 16px;
    padding-top:2px;
}
.form-input input{
    text-align: right;
    width:70%;
    border:0;
    border-radius: 0;
}

.form-input .form-input-left{
    font-weight: bolder;
    text-align: center;
    width:20%;
}
.form-input .form-input-right{
    width:10%;
}

.form-radio{
    margin-top: 20px;
    width: 100%;
    font-size: 0;
}

.form-radio .radio{
    display: inline-block;
    font-size: 16px;
    width:49%;
}

.hbtype-tips{
    margin-top: 20px;
    padding:3%;
    border-radius: 2px;
    background: #FFF;
    position: relative;
}
.tips-corner{
    height: 10px;
    width: 1px;
    border-bottom: 10px solid #FFF;
    border-left: 10px solid #EEE;
    border-right:10px solid #EEE;
    position: absolute;
    top:-20px;
    left:5%;
}
.hbtype-tips p{
    text-indent: 2em;
    font-size: 14px;
    display: none;    
}

.hbtype-tips p.active{
    display: block;
}

.hbreceivesum{
    text-align: center;
    font-size: 20px;
    color:#F1C40F;
}

